    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Pytest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/pytest.exe",
            "args": [
                "${workspaceFolder}/test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Command Line Args Example",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/udemy_python_advanced/Chapter04_Functions",
            "program": "command_line_args.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--arg1",
                "Test",
                "--arg2",
                "42",
                "--arg3",
                "True"
            ]
        },
    ]
}